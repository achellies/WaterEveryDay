<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#ffffcccc" android:angle="270.0" android:centerY="0.5" />
            <stroke android:width="0.0dip" android:color="#ffdcdcdc" />
            <corners android:topLeftRadius="1.0dip" android:topRightRadius="1.0dip" android:bottomLeftRadius="10.0dip" android:bottomRightRadius="10.0dip" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#ffffcccc" android:angle="270.0" android:centerY="0.5" />
            <stroke android:width="0.0dip" android:color="#ff00ff00" />
            <corners android:topLeftRadius="1.0dip" android:topRightRadius="1.0dip" android:bottomLeftRadius="10.0dip" android:bottomRightRadius="10.0dip" />
        </shape>
    </item>
</selector>
