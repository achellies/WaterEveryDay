<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/tab_focus_left">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#ffffcccc" android:angle="270.0" android:centerY="0.5" />
            <stroke android:width="1.0dip" android:color="#ffdcdcdc" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/tab_focus_left">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#ffffcccc" android:angle="270.0" />
            <stroke android:width="1.0dip" android:color="#ff00ff00" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@drawable/tab_unfocus_left">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#ffffffff" />
            <stroke android:width="1.0dip" android:color="@color/labelTxt" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
</selector>
